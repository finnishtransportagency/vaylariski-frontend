events {
    worker_connections  1024;
}

http {
  keepalive_timeout 300s;
  include mime.types;

  server {
    listen 3000;
    server_name localhost;

    location / {
      root /var/www;
      index index.html;
    }

    location /api {
      proxy_pass ${PROXY_URL};
      proxy_connect_timeout 300s;
      proxy_send_timeout 300;
      proxy_read_timeout 300s;
    }
  }
}

